<div class="row">
  <h2>Pick a bot</h2>
  <hr/>
</div>
<div class="row cell">
  <div class="col s12 m6 l4 xl3">
    <div class="card">
      <div class="card-content">
        <span class="card-title">How to start</span>
        <p>Simply click on the chat button of your favorite bot
          <span class="waves-effect waves-circle waves-light btn-floating secondary-content purple">
    <i class="material-icons">chat_bubble</i></span> to start your conversation</p>
      </div>
    </div>
  </div>
<% 
let count = 0;
bots.forEach((bot) => {
%>
  <div class="col s12 m6 l4 xl3 cell">
    <div class="card">
      <div class="card-image">
        <img class="responsive-img" src="<%= bot.img %>">
        <span class="card-title"><%= bot.name %></span>
        <a href="/chat/<%= bot.name %>" class="btn-floating halfway-fab waves-effect waves-light purple"><i class="material-icons">chat_bubble</i></a>
      </div>
      <div class="card-content">
        <div class="icon-block">
          <p><%= bot.advice %></p>
        </div>
      </div>
    </div>
  </div>
<%
}); 
%>  
</div>